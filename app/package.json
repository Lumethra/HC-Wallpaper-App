{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "description": "A desktop wallpaper changer application",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lumethra/HC-Wallpaper-App.git"
  },
  "author": {
    "name": "Maximilian",
    "email": "maximilian.zhu@outlook.de"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently \"cross-env npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "cross-env ELECTRON=true next build && cp index.js out/ && electron-builder && mkdir -p installer && find dist -name '*.AppImage' -o -name '*.exe' -o -name '*.dmg' -o -name '*.deb' | xargs -I{} cp {} installer/ 2>/dev/null || true"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "next": "^15.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "wallpaper": "^7.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  }
}