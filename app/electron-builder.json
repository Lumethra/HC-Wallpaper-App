{
    "appId": "com.hackclub.wallpaper-app",
    "productName": "HC Wallpaper App",
    "directories": {
        "output": "dist"
    },
    "files": [
        "out/**/*",
        "electron/**/*",
        "index.js",
        "package.json"
    ],
    "win": {
        "target": "portable",
        "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "mac": {
        "target": [
            "dmg"
        ]
    },
    "linux": {
        "target": [
            "AppImage",
            "deb"
        ]
    },
    "publish": null
}