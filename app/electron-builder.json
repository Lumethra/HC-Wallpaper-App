{
    "appId": "com.hackclub.wallpaper-app",
    "productName": "HC Wallpaper App",
    "directories": {
        "output": "dist"
    },
    "asar": false,
    "files": [
        "out/**/*",
        "electron/**/*",
        "index.js",
        "package.json"
    ],
    "win": {
        "icon": "public/icons/formatted-icons/Abhay-App-Icon.ico",
        "target": [
            "portable",
            "nsis"
        ]
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "HC Wallpaper App",
        "uninstallDisplayName": "HC Wallpaper App",
        "artifactName": "${productName}-Setup-${version}.${ext}",
        "installerIcon": "public/icons/formatted-icons/Abhay-App-Icon.ico",
        "uninstallerIcon": "public/icons/formatted-icons/Abhay-App-Icon.ico",
        "installerHeaderIcon": "public/icons/formatted-icons/Abhay-App-Icon.ico"
    },
    "mac": {
        "target": [
            "dmg"
        ],
        "icon": "public/icons/formatted-icons/Abhay-App-Icon.icns"
    },
    "linux": {
        "target": [
            "AppImage",
            "deb",
            "rpm",
            "snap",
            "pacman",
            "freebsd",
            "tar.gz"
        ],
        "category": "Utility",
        "icon": "public/icons/formatted-icons/Abhay-App-Icon.png",
        "maintainer": "Hack Club",
        "vendor": "Hack Club",
        "synopsis": "An application for managing desktop wallpapers"
    },
    "extraResources": [
        {
            "from": "node_modules/wallpaper/windows-wallpaper.exe",
            "to": "windows-wallpaper.exe",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "node_modules/electron/dist/icudtl.dat",
            "to": "icudtl.dat"
        }
    ],
    "asarUnpack": [
        "node_modules/wallpaper/**/*"
    ],
    "publish": null
}