{
    "appId": "com.hackclub.wallpaper-app",
    "productName": "HC-Wallpaper-App",
    "directories": {
        "output": "dist"
    },
    "asar": false,
    "files": [
        "out/**/*",
        "electron/**/*",
        "index.js",
        "package.json"
    ],
    "win": {
        "target": [
            "portable",
            "nsis"
        ],
        "icon": "public/icons/formatted-icons/Abhay-App-Icon.ico"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "shortcutName": "HC Wallpaper App",
        "artifactName": "${productName}_Windows-Installer_${version}.${ext}"
    },
    "portable": {
        "artifactName": "${productName}_Windows-Portable_${version}.${ext}"
    },
    "mac": {
        "target": [
            "dmg"
        ],
        "category": "public.app-category.utilities",
        "icon": "public/icons/formatted-icons/Abhay-App-Icon.icns",
        "hardenedRuntime": true,
        "gatekeeperAssess": false,
        "entitlements": "entitlements.plist",
        "entitlementsInherit": "entitlements.plist",
        "artifactName": "${productName}_macOS_${version}.${ext}"
    },
    "linux": {
        "target": [
            "AppImage",
            "deb",
            "rpm"
        ],
        "category": "Utility",
        "icon": "public/icons/formatted-icons/Abhay-App-Icon.png",
        "artifactName": "${productName}_Linux-x64_${version}.${ext}"
    },
    "linux-arm64": {
        "artifactName": "${productName}_Linux-ARM64_${version}.${ext}"
    },
    "linux-armv7l": {
        "artifactName": "${productName}_Linux-ARMv7l_${version}.${ext}"
    },
    "extraResources": [
        {
            "from": "node_modules/wallpaper/windows-wallpaper.exe",
            "to": "windows-wallpaper.exe",
            "filter": [
                "**/*"
            ]
        },
        {
            "from": "node_modules/electron/dist/icudtl.dat",
            "to": "icudtl.dat"
        }
    ],
    "asarUnpack": [
        "node_modules/wallpaper/**/*"
    ],
    "publish": null
}